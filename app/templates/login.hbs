    <div class="login__form-group form-group">
      <label class="form-group__label form-group__label">Usuário</label>
      <input class="login__input form-group__input" id='identification' autocomplete="username"
        value={{identification}} autofocus="autofocus"> <!-- placeholder="e-mail" -->
    </div>

    <div class="login__form-group form-group">
      <label class="form-group__label">Senha</label>

      <div class="form-group__container">
        <span id="msg-caps-on" class="form__msg form__msg--error">
          <span class="form__msg-icon icon-alert-triangle"></span>Caps Lock is on
        </span>
        <input class="login__input login__input-pass form-group__input pwd" id="password" autocomplete="password"
          type="password" value={{password}}>
        <button class="login__show-pass" type="button" {{action "passwordVisibility"}}>
          <span class="icon-eye-off"></span>
          <span class="icon-eye"></span>
        </button>
      </div>

      <button class="login__forgot-pass" type="button" {{action 'forgotPass'}}>Esqueceu sua senha?</button>
      <button class="login__forgot-pass" type="button" {{action 'autoRegister'}}>Cadastre-se</button>

    </div>
    <div class="form-group">
      <span class="checkbox">
        <input class="checkbox__input" id="remember" checked="checked" name="remember" type="checkbox" value={{remember}}>
        <label class="checkbox__label" for="remember">Salvar informações</label>
      </span>
    </div>
    {{#if errorMessage}}
      <div class="login__alert alert alert--has-icon alert--error alert--xxs">
        <span class="alert__icon icon-x"></span>
        <p>{{{errorMessage}}}</p>
      </div>
    {{/if}}

    {{#if success_mail}}
      <div class="login__alert alert alert--has-icon alert--success alert--xxs">
        <span class="alert__icon icon-check"></span>
        <p>{{{success_mail}}}</p>
      </div>
    {{/if}}

    <button class="login__cta btn" id="login_button" type="submit">Entrar</button>
  </div>
</form>

<aside id="forgot_modal" class="modal">

  <div class="modal__content modal__content--sm">

    <header class="modal__header">
      <button class="modal__close btn-close icon-x" type="submit" {{action 'cancelForgot'}}></button>

      <h3 class="modal__title">Solicitar nova senha</h3>
    </header>
    <div class="modal__body">
      <p>Preencha seu e-mail abaixo para receber uma nova senha em e-mail.</p>

      <div class="login__form-group form-group form-group--full-width">
        <input class="form-group__input" type="textbox" id="user_email"
          value={{user_email}}><!-- placeholder="Insira seu endereço de e-mail" -->
      </div>

      {{#if error_forgot}}
        <div class="alert alert--error alert--has-icon alert--xxs">
          <span class="alert__icon icon-alert-triangle"></span>
          <p>{{{error_forgot}}}</p>
        </div>
      {{/if}}

    </div>
    <div class="modal__footer modal__footer--center">
      <button class="btn" type="submit" {{action 'sendMail'}}>Solicitar nova senha</button>
    </div>

  </div>

  <div class="modal__overlayer"></div>
</aside>


