<span class="flex flex-row items-center m-bottom--md">
    <svg xmlns="http://www.w3.org/2000/svg"
        class="stroke-green-30"
        fill="none"
        height="24"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        stroke="currentColor"
        viewBox="0 0 24 24"
        width="24">
        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
    </svg>
    {{#if UltimaAplicacao}}
        <span class="m-left--xs">Aplicada em:</span>
        <span class="m-left--xs fw--5">{{UltimaAplicacao.dataAplicacaoFormat}}</span>
    {{else}}
        <span class="m-left--xs">Não aplicada.</span>
    {{/if}}
</span>

<div id="botaoAplicar" class="title-3 btn btn--link list__name" style={{if (equalstr toggleRole "instrutor") "display: block" "display: none"}}>
    <button type="button" {{action "mostrarTurmas" }}>Marcar como aplicada</button>
</div>
<div id="Botaoturmas" class="title-3 btn btn--link list__name" style="display: none">
    <button type="button" {{action "saveAplicacaoTurmas" aula.aplicacoes}}>Salvar Aplicações</button>
</div>

{{!-- MODAL APLICAÇÃO --}}
<div class="" style="display: none" id="turmasId{{turma.id}}">
    <h1>Situação da aula</h1>
    <input type="checkbox" checked={{checked}} onchange={{action 'selectAllTurmas' allChecked}} /> <label>Selecionar todas as turmas</label>
    {{#each pessoa.plataformaTurmas as |turma|}}
        {{#if (equalstr turma.plataformaAno.id aula.plataformaAno.id)}}
            <input type="checkbox"
            checked={{if (containInListID turma.id TurmasAplicadas) "checked" ""}}
            value={{turma.id}}
            onchange={{action 'turmasChanged' value='target.value'}} />
            <label>{{turma.name}}</label>
        {{/if}}
    {{/each}}
</div>
{{!-- /MODAL APLICAÇÃO --}}

