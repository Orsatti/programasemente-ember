{{#if aulasAno}}
    <div class="row middle-xs">
        <div class="col-xs-12 col-md-8">
            <div class="title-3 color-blue-navy-50">{{conteudo.titulo}}</div>
        </div>
        <div class="col-xs-12 col-md-4">
            <div class="flex flex-col flow-xxs">
                <span>
                    {{aulasAno.firstObject.plataformaAno.segmento.titulo}}
                </span>

                <span class="">{{ano}}</span>

                {{#if (notequalstr show 'Biblioteca')}}
                    <span class="flex flex-row flex-wrap gap-xs flow-h-xs">
                        {{#each aulasAno as |aulaA index|}}
                            {{#if (islower index 5)}}
                                <span class="">{{aulaA.titulo}}</span>
                            {{/if}}
                            {{#if (equalstr index 6)}}
                                <span class="">...</span>
                            {{/if}}
                        {{/each}}
                    </span>
                {{else}}
                    <span class="">
                        {{conteudo.tema.name}}
                    </span>
                {{/if}}
            </div>
        </div>
    </div>

    {{!--
    <li>
