{{#each conteudoAnos as |ano|}}
  <div class="media media--card">
    <div id="Publicos">
      <li class="title-3 list__name">PÃºblico(s):</li>
      {{#if (sizeequals conteudo.publicos 3)}}
          <li class="title-3 list__name">Todos</li>
      {{else}}
        {{#each conteudo.publicos as |publico|}}
          <span class="title-aux">{{publico.nameFormat}}</span>
        {{/each}}
      {{/if}}
    </div>
    <div class="media__body flow-md">
      <div>
        <span class="title-aux">{{conteudo.tema.name}}</span>
        <span class="media__title title-2 m-top--xxs">{{conteudo.titulo}}</span>
      </div>
      <span class="title-aux">Tipo de Arquivo: {{conteudo.tipo}}</span>
      <input type="checkbox" id={{conteudo.id}} name="situacao" onchange={{ action 'postSelectedSituacao' conteudo}} checked={{conteudo.situacao}}> <span class="title-aux">{{if conteudo.situacao "Ativo" "Inativo"}}</span>

      {{conteudo-aula-card conteudo=conteudo ano=ano}}

      <button class="btn btn--ghost btn--xxs" id="header-indicadores" {{action 'goToEditConteudo' conteudo.id}}>
        <span class="btn__label">Editar</span>
      </button>
    </div>
  </div>
{{/each}}
