                    <label>{{conteudo.situacao}}</label>
                    <li>
                      <button type="button" class="login__cta btn" {{action "goToCreateConteudo"}}>Editar</button> 
                    </li>
                  </div>
                  {{!-- /CONTEÚDO CARD --}}
                </div>
              {{/if}}
            {{/each}}
            {{!-- /CONTEÚDOS --}}
          {{/each}}
        {{/each}}
      {{/each}}
    </div>
  {{/if}}
{{/if}}