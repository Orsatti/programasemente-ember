{{#each conteudoAnos as |ano|}}
<div class="media">

  <div class="flex flex-row gap-xs p-bottom--sm w100">
    <div class="col-xs-8 col-sm-8 col-md-6 col-lg-8">
      <p class="">{{conteudo.titulo}}</p>
    </div>
    <div class="botoes">
      <button class="btn btn--is-toggle {{if conteudo.situacao '
      ativo btn--is-toggle--on' 'bg-error-60'}}" style="width: 1.5rem" {{action 'postSelectedSituacao' conteudo}}>
        <span class="btn__label label__default">
          <span>
            <span class="icon-x icon--lg color-error-20 m-right--xxs"></span>

          </span>
        </span>
        <span class="btn__label label__active">
          <span>
            <span class="icon-check icon--lg "></span>

          </span>
        </span>
        {{!-- <span class="btn__label label__active">{{if conteudo.situacao "Ativo" "Inativo"}}</span> --}}
      </button>

      <a href="#" class="btn btn--text" {{action 'goToEditConteudo' conteudo.id}}>
        {{!-- <span class="btn__icon icon-edit"></span> --}}
        <span class="btn__label">
          <img src="/assets/img/edit-button.png" alt="">
        </span>
      </a>
      <a href="#" class="btn btn--text ">
        {{!-- <span class="btn__icon icon-edit"></span> --}}
        <span class="btn__label">
          <img src="/assets/img/delete.png" alt="">
        </span>
      </a>
    </div>

    {{!-- {{#if (equalstr pessoaRole 'admin')}}
    <div class="checkbox">
      <input class="checkbox__input" id={{conteudo.id}} type="checkbox" name="situacao" onchange={{
        action 'postSelectedSituacao' conteudo}} checked={{conteudo.situacao}}>
      <label class="checkbox__label" for="{{conteudo.id}}">{{if conteudo.situacao "Ativo" "Inativo"}}</label>
    </div>
    {{/if}} --}}
  </div>

  <div class="media__body">

    <div class="row middle-xs self-stretch segmento">

      <!-- "video de" + seg + ano + aula/bloco + tipo (video/pdf/etc) + publico que pode ver
             "video de" = título do conteúdo
        -->
      <div class="col-xs-12 col-md-12 col-lg-6">
        <p>Listado para:</p>
        {{conteudo-aula-card conteudo=conteudo ano=ano show=show}}
      </div>
      <div class="box">

        <div class="col-sm-4 col-md-7 ta-c">
          <span class=" flex-col items-start flow-xs titulo-conteudo" flex="20">
            <!-- tamanho fixo para alinhar ícones em lista -->
            {{component (strconcat "icon-" conteudo.tipo) class="icon icon--square icon--xs color-green-30"}}
            <span class="title-aux color-blue-navy-40">{{conteudo.tipo}}</span>
            <span class="seta"><img src="/assets/img/Arrow.png" alt=""></span>
          </span>
        </div>

        <div class="col-sm-3 col-md-5">
          <span class="flex flex-col items-start flow-xs">
            {{#each conteudo.publicos as |publico|}}

            {{component (strconcat "icon-" publico.nameIcon) class="icon icon--square icon--xs color-green-30"}}
            <span class="title-aux color-blue-navy-40">{{publico.nameFormat}}</span>

            {{/each}}
          </span>
        </div>
      </div>
    </div>
    {{!--
    <ul>
      <li class="flex flex-row items-center gap-xs" id="Publicos">
        <span class="title-aux">
          Ativo: {{if conteudo.situacao "Ativo" "Inativo"}}
        </span>
      </li>
    </ul>

    <div>
      <span class="title-aux">{{conteudo.tema.name}}</span>
      <span class="media__title m-top--xxs">{{conteudo.titulo}}</span>
    </div>
    --}}

  </div>
  <p class="data-up">Data de upload: 28/08/2024</p>
</div>


{{/each}}