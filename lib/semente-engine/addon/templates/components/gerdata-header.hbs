<div class="flex flex-row m-top--md">
  <div class="mt1">
    {{#if (equalstr role 'admin')}}
      {{#link-to 'gersistema'}}
        <button class="main__back btn btn--link color-blue-navy-60 animated fadeInLeftShort faster"
          id="back-person-specific_old" type="button">
          <span class="icon-arrow-left"></span>
          <span class="btn__label">voltar</span>
        </button>
      {{/link-to}}
    {{/if}}
  </div>

  <h1 class="main__title animated fadeInLeftShort faster d100 m-left--lg m-top--xxs m-bottom--xs">
    {{instituicao.name}}
  </h1>
</div>

<section class="sections__section flow-xl">
  <div class="tabs animated fadeInLeftShort faster d250">
    {{#if (equalstr role "admin")}}
    {{#link-to 'gerdata.informations' instituicao.id }}
    <button class="report__tab tabs__tab">
      <span>Informações</span>
    </button>
    {{/link-to}}
    {{#link-to 'gerdata.years' instituicao.id }}
    <button class="report__tab tabs__tab {{if years 'tabs__tab--is-active'}}">
      <span>Anos</span>
    </button>
    {{/link-to}}
    {{/if}}
    {{#link-to 'gerdata.classes' instituicao.id }}
    <button class="report__tab tabs__tab {{if classes 'tabs__tab--is-active'}}">
      <span>Turmas</span>
    </button>
    {{/link-to}}
    {{#link-to 'gerdata.users' instituicao.id }}
    <button class="report__tab tabs__tab {{if users 'tabs__tab--is-active'}}">
      <span>Usuários</span>
    </button>
    {{/link-to}}
    {{#link-to 'gerdata.codes' instituicao.id }}
    <button class="report__tab tabs__tab {{if codes 'tabs__tab--is-active'}}">
      <span>Códigos</span>
    </button>
    {{/link-to}}
  </div>



</section>