<section class="sections__section flow-xl">
  <div class="tabs animated fadeInLeftShort faster d250">
    {{#if (equalstr pessoa.role 'admin')}}
      {{#link-to 'gerdata.informations' instituicao.id }}
        <button class="report__tab tabs__tab-adm">
          <span>Informações</span>
        </button>
      {{/link-to}}
      {{#link-to 'gerdata.years' instituicao.id }}
        <button class="report__tab tabs__tab-adm {{if years 'tabs__tab--is-active'}}">
          <span>Anos</span>
        </button>
      {{/link-to}}
    {{/if}}
    {{#link-to 'gerdata.classes' instituicao.id }}
      <button class="report__tab tabs__tab-adm {{if classes 'tabs__tab--is-active'}}">
        <span>Turmas</span>
      </button>
    {{/link-to}}
    {{#link-to 'gerdata.users' instituicao.id }}
      <button class="report__tab tabs__tab-adm {{if users 'tabs__tab--is-active'}}">
        <span>Usuários</span>
      </button>
    {{/link-to}}
    {{!-- {{#link-to 'gerdata.codes' instituicao.id }}
      <button class="report__tab tabs__tab {{if codes 'tabs__tab--is-active'}}">
        <span>Códigos</span>
      </button>
    {{/link-to}} --}}
  </div>
</section>
{{#if (or (equalstr pessoa.role 'admin') (and (equalstr pessoa.role 'gestor') (equalstr pessoa.instituicao.id '9')))}}
  <div class="flex flex-row sections__section--adm">
   
    <h1 class="main__title main__title--adm animated fadeInRightShort">
      {{instituicao.name}}
    </h1>
     <div>
      {{#link-to 'gersistema'}}
        <button class="main__back--adm animated fadeInLeftShort faster"
          id="back-person-specific_old" type="button">
          <span class="icon-arrow-left"></span>
          <span class="btn__label">voltar</span>
        </button>
      {{/link-to}}
    </div>
  </div>
{{/if}}

