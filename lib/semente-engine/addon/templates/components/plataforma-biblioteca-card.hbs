<div class="media media--card" id="conteudo-{{conteudo.id}}" style="cursor: pointer;" onclick={{action 'openModal' conteudo}}>
  <picture class="media__picture">
    <img class="media__thumb" id="file-{{conteudo.id}}" src={{thumbnail}} alt="{{conteudo.titulo}}">
  </picture>
  <div class="media__body flow-md">
    <div>
      <span class="title-aux">{{conteudo.tema.name}}</span>
      <span class="media__title title-2 m-top--xxs">{{conteudo.titulo}}</span>
    </div>
    {{#unless (equalstr conteudo.tipo 'Video')}}
      <a class="btn btn--ghost btn--xxs" id="header-indicadores" href={{file}} target="_blank">
        <span class="btn__label">Ver conte√∫do</span>
      </a>
    {{/unless}}
  </div>
</div>

