{{#if  (equalstr pessoa.role "aluno") }}
    
    <div class="row">
        <label for="name">Senha</label>
        <button type="button" class="login__cta btn">Alterar senha</button>
    </div>

    <div class="row">
        <label for="name">Nome Completo</label>
        {{input name="name" value=pessoa.name placeholder='Nome Completo'}}
    </div>

    <div class="row">
        <label for="genero_student{{pessoa.id}}">Gênero</label>
        <select name="genero" id="genero_student{{pessoa.id}}" onchange={{action 'refreshSelectedGenero' value='target.value'}}>
            <option value="">---</option>
            <option value="masculino"  selected={{if (equalstr pessoa.genero "masculino") "selected"}}>Masculino</option>
            <option value="feminino" selected={{if (equalstr pessoa.genero "feminino") "selected"}}>Feminino</option>
            <option value="">Prefiro não dizer</option>
        </select>
    </div>

    <div class="row">
        <label for="serie_student{{pessoa.id}}">Serie</label>
        <select name="serie" id="serie_student{{pessoa.id}}" onchange={{action 'refreshSelectedAno' value='target.value'}}>
            <option value="">---</option>
            {{#each pessoa.instituicao.plataformaAnos as |pa|}}
                <option value="{{pa.id}}" selected={{if (equalstr pa.id pessoa.plataformaAnos.firstObject.id) "selected"}}>{{pa.name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="row">
        <label for="turma_student{{pessoa.id}}">Turma</label>
        <select name="turma" id="turma_student{{pessoa.id}}" onchange={{action 'refreshSelectedPlataformaTurma' value='target.value'}}>
            <option value="">---</option>
            {{#each pessoa.instituicao.plataformaTurmas as |pt|}}
                {{#if (equalstr pt.plataformaAno.id pessoa.plataformaAnos.firstObject.id)}}
                    <option value="{{pt.id}}" selected={{if (equalstr pt.id pessoa.plataformaTurmas.firstObject.id) "selected"}}>{{pt.name}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>

    <button type="button" class="login__cta btn" {{action "saveProfile" pessoa}}>Salvar</button>

{{else if (equalstr pessoa.role "instrutor") }}
    <div class="row">
        <label for="name_responsavel">Nome Completo</label>
        {{input name='name_responsavel' value=pessoa.name placeholder='Nome Completo'}}
        {{!-- <input type="text" id="name_responsavel{{responsavel.id}}"> --}}
    </div>

    <div class="row">
        <label for="celular">Número de Celular</label>
        {{input name='celular' value=pessoa.telefone placeholder='(xx) xxxxx-xxxx '}}
        {{!-- <select name="celular" id="celular">
            <option value="">---</option>
        </select> --}}
    </div>

    <div class="row">
        {{input type="checkbox" checked=pessoa.isAplicador}}
        <label for="celular">Você aplica o programa?</label>
    </div>
    
    {{#if pessoa.isAplicador}}
        <div class="row">
            {{#each segmentos as |seg| }}
                <div class="col-2">
                    <div class="row">
                        <input type="checkbox" id="segmento{{seg.id}}" onchange={{action (action "selectSegmento" seg) value='target.checked'}}>
                        <label>{{seg.titulo}}</label>
                    </div>
                    {{#each seg.plataformaAnos as |platAno|}}
                        <div class="row">
                            <input type="checkbox" checked={{if (isinarray platAno pessoa.plataformaAnos) "checked" ''}} id="plat_ano{{platAno.id}}" onchange={{action (action "selectAno" platAno) value='target.checked'}}>
                            <label>{{platAno.name}}</label>
                        </div>
                    {{/each}}
                </div>
            {{/each}}
        </div>
    {{/if}}

    <button type="button" class="login__cta btn" {{action "saveResponsible" pessoa}}>Salvar</button>

{{else if (equalstr pessoa.role "responsavel") }}
    <div class="row">
        <label for="name_responsavel">Nome Completo</label>
        {{input name='name_responsavel' value=pessoa.name placeholder='Nome Completo'}}
        {{!-- <input type="text" id="name_responsavel{{responsavel.id}}"> --}}
    </div>

    <div class="row">
        <label for="celular">Número de Celular</label>
        {{input name='celular' value=pessoa.telefone placeholder='(xx) xxxxx-xxxx '}}
        {{!-- <select name="celular" id="celular">
            <option value="">---</option>
        </select> --}}
    </div>

    <button type="button" class="login__cta btn" {{action "saveResponsible" pessoa}}>Salvar</button>
{{/if}}
