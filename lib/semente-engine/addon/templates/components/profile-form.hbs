{{#if (equalstr pessoa.role "aluno") }}

{{!-- <div class="row">
        <label for="name">Senha</label>
        <button type="button" class="btn btn--md">Alterar senha</button>
    </div> --}}
<div class="flow">
    <div class="row">
        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
                <label class="form-group__label" for="name">Nome Completo</label>
                {{input class="form-group__input"
                        blur=(action 'trimAll')
                        focus-in=(action 'removeErrorMark')
                        for="validation"
                        id="person_name"
                        key-down=(action 'liveCheckName')
                        name="name"
                        type="text"
                        value=pessoa.name}}

            </div>
            <p class="alert alert__form alert--sm alert--error alert--has-icon m-top--sm animated d250"
               id="error_name"
               data-animation="fadeIn">
                <span class="alert__icon icon-x"></span>
                <span class="alert__msg"></span>
            </p>
        </div>
        <div class="col-xs-4 col-lg-3 col-lg-offset-1">
            <div class="form-group w100">
                <label class="form-group__label" for="genero_student{{pessoa.id}}">Gênero</label>
                <div class="form-group__wrapper form-group__wrapper--select">
                    <select class="form-group__input form-group__input--select" for="validation"
                        id="genero_student{{pessoa.id}}" name="genero"
                        onchange={{action 'refreshSelectedGenero' value='target.value'}}>
                        <option value="">---</option>
                        <option value="masculino" selected={{if (equalstr pessoa.genero "masculino") "selected"}}>
                            Masculino</option>
                        <option value="feminino" selected={{if (equalstr pessoa.genero "feminino") "selected"}}>Feminino
                        </option>
                        <option value="">Prefiro não dizer</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
                <label class="form-group__label" for="serie_student{{pessoa.id}}">Serie</label>
                <div class="form-group__wrapper form-group__wrapper--select">
                    <select class="form-group__input form-group__input--select" for="validation"
                        id="serie_student{{pessoa.id}}" name="serie"
                        onchange={{action 'refreshSelectedAno' value='target.value'}}>
                        <option value="">---</option>
                        {{#each pessoa.instituicao.plataformaAnos as |pa|}}
                        <option value="{{pa.id}}"
                            selected={{if (equalstr pa.id pessoa.plataformaAnos.firstObject.id) "selected"}}>
                            {{pa.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>
        <div class="col-xs-4 col-lg-3 col-lg-offset-1">
            <div class="form-group w100">
                <label class="form-group__label" for="turma_student{{pessoa.id}}">Turma</label>
                <div class="form-group__wrapper form-group__wrapper--select">
                    <select class="form-group__input form-group__input--select" for="validation"
                        id="turma_student{{pessoa.id}}" name="turma"
                        onchange={{action 'refreshSelectedPlataformaTurma' value='target.value'}}>
                        <option value="">---</option>
                        {{#each pessoa.instituicao.plataformaTurmas as |pt|}}
                        {{#if (equalstr pt.plataformaAno.id pessoa.plataformaAnos.firstObject.id)}}
                        <option value="{{pt.id}}"
                            selected={{if (equalstr pt.id pessoa.plataformaTurmas.firstObject.id) "selected"}}>
                            {{pt.name}}</option>
                        {{/if}}
                        {{/each}}
                    </select>
                </div>
            </div>

        </div>
    </div>
</div>

<button type="button" class="btn btn--md" {{action "saveProfile" pessoa}}><span>Avançar</span><span
        class="btn__icon icon-arrow-right"></span></button>
         <p class="m-left--md alert alert__form alert--sm alert--error alert--has-icon m-top--sm animated d250"
                    id="error_form" data-animation="fadeIn">
                    <span class="alert__icon icon-x"></span>
                    <span class="alert__msg"></span>
                </p>











{{else if (equalstr pessoa.role "instrutor") }}
<div class="flow">
    <div class="row">
        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
                <label class="form-group__label" for="name_responsavel">Nome Completo</label>
                {{input     class="form-group__input"
                            name="name_responsavel"
                            value=pessoa.name}}
                {{!-- <input type="text" id="name_responsavel{{responsavel.id}}"> --}}
            </div>
        </div>

        <div class="col-xs-4 col-lg-3 col-lg-offset-1">
            <div class="form-group w100">
                <label class="form-group__label" for="celular">Número de Celular</label>
                {{input class="form-group__input"
                        name='celular'
                        value=pessoa.telefone }} <!-- placeholder='(xx) xxxxx-xxxx '-->
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-xs-4 col-lg-3">
            <div class="checkbox">
                <label class="checkbox__label" for="celular">Você aplica o programa?</label>
                {{input class="checkbox__input" type="checkbox" checked=pessoa.isAplicador}}
            </div>
        </div>
    </div>

    {{#if pessoa.isAplicador}}
    <div class="row">

        {{#each segmentos as |seg| }}
            <div class="col-xs-2">
                <div class="row">
                    <input type="checkbox" id="segmento{{seg.id}}"
                        onchange={{action (action "selectSegmento" seg) value='target.checked'}}>
                    <label>{{seg.titulo}}</label>
                </div>
                {{#each seg.plataformaAnos as |platAno|}}
                <div class="row">
                    <input type="checkbox" checked={{if (isinarray platAno pessoa.plataformaAnos) "checked" ''}}
                        id="plat_ano{{platAno.id}}" onchange={{action (action "selectAno" platAno) value='target.checked'}}>
                    <label>{{platAno.name}}</label>
                </div>
                {{/each}}
            </div>
        {{/each}}

    </div>
    {{/if}}
</div>

<button type="button" class="btn btn--md" {{action "saveResponsible" pessoa}}><span>Avançar</span><span
        class="btn__icon icon-arrow-right"></span></button>











