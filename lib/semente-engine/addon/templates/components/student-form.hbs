<div class="flow flow--xl">

    <div class="row">

        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
            <label class="form-group__label" for="login">Login</label>
            {{input class="j-validate form-group__input"
                    name="login"
                    value=pessoa.email
                    autocomplete="off" 
                    data-type="login"
                    data-required="true"
                    focus-out=(action 'trimall')
                    focus=(action 'trimall')}}
            </div>
             <p class="alert alert__form alert--sm alert--error alert--has-icon m-top--sm animated d250"
                    data-animation="fadeIn">
                    <span class="alert__icon icon-x"></span>
                    <span class="alert__msg"></span>
            </p>
        </div>

        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
            <label class="form-group__label" for="senha">Senha</label>
            {{input class="j-validate form-group__input"
                    name="senha"
                    value=pessoa.password
                    type="password"
                    autocomplete="new-password"
                    data-type="password"
                    data-required="true"
                    focus-out=(action 'trimall')
                    focus=(action 'trimall')}}
            </div>
             <p class="alert alert__form alert--sm alert--error alert--has-icon m-top--sm animated d250"
                    data-animation="fadeIn">
                    <span class="alert__icon icon-x"></span>
                    <span class="alert__msg"></span>
                </p>
        </div>

    </div>





    <div class="row">

        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
            <label class="form-group__label" for="name">Nome Completo</label>
            {{input class="j-validate form-group__input"
                    name="name1"
                    value=pessoa.name
                    data-type="nome"
                    data-required="true"
                    focus-out=(action 'trimall')
                    focus=(action 'trimall')
                    key-up=(action 'checkName')}}
            </div>
             <p class="alert alert__form alert--sm alert--error alert--has-icon m-top--sm animated d250"
                    data-animation="fadeIn">
                    <span class="alert__icon icon-x"></span>
                    <span class="alert__msg"></span>
                </p>
        </div>

        <div class="col-xs-4 col-lg-3">
        <div class="form-group w100">
        <label class="form-group__label" for="genero_student{{pessoa.id}}">Gênero</label>
        <select class="j-validate form-group__input" id="genero_student{{pessoa.id}}" name="genero"
            onchange={{action 'refreshSelectedGenero' value='target.value'}} data-type="nome" data-required="true">
            <option value="">---</option>
            <option value="masculino" selected={{if (equalstr pessoa.genero "masculino") "selected"}}>Masculino</option>
            <option value="feminino" selected={{if (equalstr pessoa.genero "feminino") "selected"}}>Feminino</option>
            <option value="">Prefiro não dizer</option>
        </select>
        </div>

        </div>

    </div>





    <div class="row">

        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
            <label class="form-group__label" for="serie_student{{pessoa.id}}">Serie</label>
            <select class="j-validate form-group__input" name="serie" id="serie_student{{pessoa.id}}"
                onchange={{action 'refreshSelectedAno' value='target.value'}}  data-type="nome" data-required="true">
                <option value="">---</option>
                {{#each pessoa.instituicao.plataformaAnos as | pa |}}
                <option value="{{pa.id}}" selected={{if (equalstr pa.id pessoa.plataformaAnos.firstObject.id) "selected"}}>
                    {{pa.name}}</option>
                {{/each}}
            </select>
            </div>
        </div>

        <div class="col-xs-4 col-lg-3">
            <div class="form-group w100">
            <label class="form-group__label" for="turma_student{{pessoa.id}}">Turma</label>
            <select class="j-validate form-group__input" name="turma" id="turma_student{{pessoa.id}}"
                onchange={{action 'refreshSelectedPlataformaTurma' value='target.value'}} data-type="nome" data-required="true">
                <option value="">---</option>
                {{#each pessoa.instituicao.plataformaTurmas as | pt |}}
                {{#if (equalstr pt.plataformaAno.id pessoa.plataformaAnos.firstObject.id)}}
                    <option value="{{pt.id}}"
                    selected={{if (equalstr pt.id pessoa.plataformaTurmas.firstObject.id) "selected"}}>
                    {{pt.name}}</option>
                {{/if}}
                {{/each}}
            </select>
            </div>
        </div>

    </div>

    {{!-- <button {{action "saveProfile" pessoa}} type="button">Salvar</button> --}}

</div>