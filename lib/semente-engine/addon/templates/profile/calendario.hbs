

<div class="main__back-container">
  <button class="btn btn--link color-blue-navy-60" {{action 'goToAulas' on="click" }} type="button">
    <span class="btn__icon icon-chevron-left"></span>
    <span class="btn__voltar">Voltar</span>
  </button>
</div>

<div class="flex flex-col justify-content-start">
  <h2 class="title-2 mt2 ml2">Meu calend√°rio</h2>

  <div class="flex flex-row justify-content-end">
    <select class="form-control mr2" name="month" id="month" onchange={{action "jump"}}>
      <option value=1>Jan</option>
      <option value=2>Feb</option>
      <option value=3>Mar</option>
      <option value=4>Abr</option>
      <option value=5>Mai</option>
      <option value=6>Jun</option>
      <option value=7>Jul</option>
      <option value=8>Ago</option>
      <option value=9>Set</option>
      <option value=10>Out</option>
      <option value=11>Nov</option>
      <option value=12>Dez</option>
    </select>

    <select class="form-control" name="year" id="year" onchange={{action "jump"}}>
      <option value=2022>2022</option>
      <option value=2023>2023</option>
    </select>
  </div>

  <table class="calendar mt1" id="calendar">
    <thead>
      <tr>
        <th>Dom</th>
        <th>Seg</th>
        <th>Ter</th>
        <th>Qua</th>
        <th>Qui</th>
        <th>Sex</th>
        <th>Sab</th>
      </tr>
    </thead>

    {{showCalendar}}
    <tbody>
      {{#each weeks as |week|}}
        <tr>
          {{#each week.days as |day|}}
            {{#if day.today}}
              <td onclick={{action "eventsInDate" day.value}} class="today" id="day{{day.value}}">{{day.value}}</td>
            {{else}}
              <td onclick={{action "eventsInDate" day.value}} id="day{{day.value}}">{{day.value}}</td>
            {{/if}}
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{todayEvents}}
  <h2 class="title-2 mt4">Eventos</h2>
  {{#if hasEvent}}
    {{#each events as |event|}}
      <div class="flex flex-col justify-content-start event-card mt1">
        <span class="event-card-date">{{event.date}}</span>
        <span class="event-card-title">{{event.title}}</span>
        <span class="event-card-text">{{event.description}}</span>
      </div>
    {{/each}}
  {{else}}
    <div class="flex flex-row justify-content-center mt4">
      <span class="event-subtitle">Nenhum evento nessa data</span>
    </div>
  {{/if}}

</div>
